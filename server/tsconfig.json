{
  "compilerOptions": {
    /* Output & Root */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language Target */
    "target": "ES2020",
    "module": "commonjs",

    /* Node.js Compatibility */
    "esModuleInterop": true,
    "types": ["node"],

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Other helpful options */
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
